<div class="custom-container">
   <%= form_for @user ,style: "border:1px solid #ccc" do |f| %>
   <h1 align="center">Sign Up</h1>
   <p>Please fill in this form to create an account.</p>
   <div class="row">
   <label class="font-weight-bold">Email</label>
   <%= f.text_field :email ,class: "form-control"%>
   </div>
    <div class="row">
   <label class="font-weight-bold">Password</label>
   <%= f.password_field :password ,class: "form-control"%>
   </div>
    <div class="row">
   <label class="font-weight-bold" >Repeat Password</label> 
   <%= f.password_field :password_confirmation ,class: "form-control" %>
   </div>
   <div class="mt-5">
      <a class="btn btn-primary col-md-5 mr-2 ml-5" href="/sessions/new">Login</a> 
      <button type="submit" class="btn btn-success col-md-5 mr-2 ml-2">Sign Up</button>
   </div>
   <% end %>
</div>