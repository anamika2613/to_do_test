<h1 class="text-center">To Do Category List</h1>
<div class="float-right">    
   <a href="/to_do_categories/new" class="btn btn-sm btn-success">Create New ToDo Category</a>
   <%= link_to 'Logout', logout_path , class: "btn btn-sm btn-warning" %>
</div>
<table class="table" id="customers" style="margin-top: 63px;">
   <thead>
      <tr>
         <th>Title</th>
         <th>Sub Category</th>
         <th>Due Date</th>
         <th>Status</th>
      </tr>
   </thead>
   <tbody class="sortable">
      <% @categories.each_with_sortable_id do |category, sortable_id| %>
      <tr id="<%= sortable_id %>">
         <!-- Needs id tag on sorting elements -->
         <td><%= category.try(:title) %></td>
         <td><%= category.try(:sub_category).try(:name)%></td>
         <td><%= category.try(:due_date)%></td>
         <td>
            <span id="cat_<%=category.id%>">
            <%=render "status", category: category%>
            </span>
         </td>
      </tr>
      <% end %>
   </tbody>
</table>
<script type="text/javascript">
   $(function() {
   $('.sortable').railsSortable();
   });
</script>