<div class="custom-container">
   <h2 align="center">Create New ToDo</h2>
   <%=form_for(@category, url: to_do_categories_path, class: "form-horizontal",style: "border:1px solid #ccc") do |f|%>
   <div class="form-group">
      <%=f.label :title, class: "control-label col-sm-2"%>
      <div class="col-sm-10">
         <%=f.text_field :title, class: "form-control" , "required": "true"%>
      </div>
   </div>
   <div class="form-group">
      <%=f.label :due_date, class: "control-label col-sm-2"%>
      <div class="col-sm-10">          
         <%=f.text_field :due_date, class: "form-control datepicker", "required": "true"%>
      </div>
   </div>
   <div class="form-group">
      <%=f.label :sub_category_id, class: "control-label col-sm-4"%>
      <div class="col-sm-10">          
         <%=f.select :sub_category_id, select_sub_category, {},{class: "form-control"}%>
      </div>
   </div>
   <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
         <%=f.submit "Create ToDo", :class=> "btn btn-success"%>
      </div>
   </div>
   <%end%>
</div>
